{
  "builders": [
  {
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-82cfb894",
    "subnet_id": "subnet-92206af6",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "zookeeper_{{isotime \"2006-01-02\"}}_{{timestamp}}",
    "ami_description": "zookeeper_{{isotime \"2006-01-02\"}}"
  }
  ],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo yum install git -y",
      "sudo pip install boto3 ansible"
    ]
  },
  {
    "type": "ansible-local",
    "playbook_file": "./ansible/site.yml --tags zookeeper",
    "galaxy_file": "./ansible/requirements.yml",
    "role_paths": [
      "./ansible/roles/myApp"
    ]
  }

  ]
}

